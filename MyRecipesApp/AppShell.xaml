<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="MyRecipesApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyRecipesApp"
    xmlns:pages="using:MyRecipesApp.Pages"
    xmlns:logic="using:MyRecipesApp.Logic">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="home"
        Route="home"
        BindingContext="{x:Static logic:ViewModelLocator.MainViewModelInstance}">
        >
    </ShellContent>

    <ShellContent
        Title="Recipes"
        ContentTemplate="{DataTemplate pages:RecipesPage}"
        Icon="recipes"
        BindingContext="{x:Static logic:ViewModelLocator.MainViewModelInstance}"
        Route="recipes"
        >
    </ShellContent>

    <ShellContent
        Title="Ingredients"
        ContentTemplate="{DataTemplate pages:IngredientsPage}"
        Icon="ingredients.png"
        BindingContext="{x:Static logic:ViewModelLocator.MainViewModelInstance}" 
        Route="ingredients"/>


 

</Shell>
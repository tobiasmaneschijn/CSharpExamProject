<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRecipesApp.Controls.RecipeCell"
             >
    
   
    
    <StackLayout Padding="10" Spacing="5" BackgroundColor="#F5F5F5" WidthRequest="800">
        <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="400"/>
        <Label Text="{Binding Title}" FontSize="20" FontAttributes="Bold" />
        <StackLayout Orientation="Horizontal">
            <Label Text="{Binding PreparationTime, StringFormat='{0} minutes prep'}" />
            <Label Text="{Binding CookingTime, StringFormat='{0} minutes cook'}" Margin="10,0,0,0" />
        </StackLayout>
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding OpenRecipeCommand}" />
        </StackLayout.GestureRecognizers>
       
    </StackLayout>
</ContentView>

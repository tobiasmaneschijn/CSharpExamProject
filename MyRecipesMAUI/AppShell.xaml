<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="MyRecipesMAUI.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:MyRecipesMAUI.Views"
	xmlns:local="clr-namespace:MyRecipesMAUI">

	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Main"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:MainPage}"
		Route="MainPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="ListDetail"
		Icon="iconlistdetail.png"
		ContentTemplate="{DataTemplate views:ListDetailPage}"
		Route="ListDetailPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="RecipeEditor"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:RecipeEditorPage}"
		Route="RecipeEditorPage" />
</Shell>
